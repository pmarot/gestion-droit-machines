<% include ../partials/head.ejs %>

<body>
    <% include ../partials/header.ejs %>
    <main class="container">
        <div class="row mt-5">
            <div class="col-md-12 mb-5 text-center">
                <h1 class="title_page"> <i class="fas fa-user-lock mr-2  color_icon"></i>Liste des droits</h1>
            </div>
            <section class="col-md-12">
                <% if(droits.length > 0){%>
                <table class="table text-center col-md-12 bg-light">
                    <thead>
                        <tr class="text-uppercase bg-info text-white mb-5">
                            <th class="p-3" scope="col" >ID Machine</th>
                            <th class="p-3" scope="col">ID Utilisateur</th>
                           <th class="p3" scope="col">Droit</th>
                            <th class="p-3" scope="col">Editer</th>
                        </tr>
                    </thead>
                    <tbody class="border">
                        <% for (i=0; i<droits.length; i++) { %>
                            <tr>
                                <td class="p-3 border-0">
                                    <a class="btn btn-outline-dark btn_show" href="">
                                        <%= droits[i].id_machine.nom %>
                                    </a> 
                                </td>
                                <td class="p-3 border-0">
                                    <a class="btn btn-outline-dark btn_show" href="">
                                    <%= droits[i].id_utilisateur.nom %>
                                    </a>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </section>
            <section class="container pt-5 pb-5 pl-4 text-center">
                <div class="row">
                    <a class="list-group-item list-group-item-action bg-info text-white text-uppercase" href="/droits/create">
                        Créer des droits
                    </a>
                </div>
                <%} else{ %>
                    <div>Il n'y a pas de machine enregistré</div>
                    <div class="row">
                        <a class="list-group-item list-group-item-action bg-info text-white text-uppercase" href="/droits/create">
                            Créer des droits
                        </a>
                    </div>
                    <% } %>
            </section>        
        </div>        
    </main>
    <% include ../partials/footer.ejs %>